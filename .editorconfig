# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 2
tab_width = 2
continuation_indent_size = 4 # IntelliJ family IDEs
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_size = 4
indent_style = tab
